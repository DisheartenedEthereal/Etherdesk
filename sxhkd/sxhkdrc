#Apps
alt + Return
  kitty

alt + d
  rofi -show

#Screenshot
Print
  flameshot gui

#Workspaces
alt + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'paces 

alt + shift + l
  sh $HOME/.local/bin/lock

alt + shift + e
  bspc quit

alt + shift + r
  bspc wm -r

#Hardware
XF86AudioRaiseVolume 
  pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume 
  pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86MonBrightnessUp
  xbacklight +5
XF86MonBrightnessDown
  xbacklight -5

#Window Management
alt + Tab
  bspc node -t {floating,tiled}

alt + q
  bspc node -{c,k}

super + Tab
  bspc node -f next.local.!hidden.window

alt + {Up,Down,Left,Right}
  {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }

alt + shift + {Up,Down,Left,Right}
  bspc node -s {north,south,west,east}

alt + space
  bspc node -t \~fullscreen
